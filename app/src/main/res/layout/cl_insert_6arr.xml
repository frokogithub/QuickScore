<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ends_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="42dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></LinearLayout>

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="@dimen/tv_total_W"
        android:layout_height="@dimen/tv_total_H"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/total_cell_color"
        android:gravity="center"
        android:textColor="?attr/total_text_color"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gl_buttons"
        app:layout_constraintEnd_toEndOf="@+id/ends_dummy"
        app:layout_constraintTop_toBottomOf="@+id/ends_dummy"
        app:layout_constraintVertical_bias="0.503" />

    <TextView
        android:id="@+id/tv_total_text"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TOTAL"
        android:textScaleX="1.4"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_total"
        app:layout_constraintStart_toStartOf="@+id/tv_total" />

    <TextView
        android:id="@+id/tv_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="?attr/record_color"
        app:layout_constraintBottom_toBottomOf="@+id/tv_total"
        app:layout_constraintEnd_toStartOf="@+id/tv_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_text" />
</androidx.constraintlayout.widget.ConstraintLayout>