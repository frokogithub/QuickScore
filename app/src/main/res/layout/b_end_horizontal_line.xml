<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_end_horisontal_line"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cells_margin"
        android:background="@android:color/black">

        <Space
            android:id="@+id/tsum"
            android:layout_width="@dimen/cell_size"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cells_margin"
            android:layout_marginEnd="@dimen/cells_margin"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="@dimen/before_sum_space"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_mark_top_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/cells_margin"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="visible">

        <Space
            android:id="@+id/ml_l"
            android:layout_width="@dimen/cells_margin"
            android:layout_height="match_parent" />

        <Space
            android:id="@+id/t0"
            android:layout_width="@dimen/cell_size"
            android:layout_height="match_parent" />

        <Space
            android:id="@+id/t1"
            android:layout_width="@dimen/cell_size"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cells_margin" />

        <Space
            android:id="@+id/t2"
            android:layout_width="@dimen/cell_size"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/cells_margin" />

        <Space
            android:id="@+id/ml2"
            android:layout_width="@dimen/cells_margin"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>