<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_end_3arr"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black">

        <LinearLayout
            android:id="@+id/ll_mark_line_left"
            android:layout_width="@dimen/cells_margin"
            android:layout_height="@dimen/cell_size"
            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>

        <TextView
            android:id="@+id/tv0"
            android:layout_width="@dimen/cell_size_match"
            android:layout_height="@dimen/cell_size_match"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:tag="0"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="@dimen/cell_size_match"
            android:layout_height="@dimen/cell_size_match"
            android:layout_marginStart="@dimen/cells_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:tag="1"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="@dimen/cell_size_match"
            android:layout_height="@dimen/cell_size_match"
            android:layout_marginStart="@dimen/cells_margin"
            android:background="@android:color/white"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:tag="2"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_mark_line_right"
            android:layout_width="@dimen/cells_margin"
            android:layout_height="@dimen/cell_size_match"
            android:background="@color/black"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:id="@+id/space"
            android:layout_width="@dimen/before_sum_space_match"
            android:layout_height="@dimen/cell_size_match"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>

        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="@dimen/cell_size_match"
            android:layout_height="@dimen/cell_size_match"
            android:layout_marginStart="@dimen/cells_margin"
            android:layout_marginEnd="@dimen/cells_margin"
            android:background="@color/dark_grey_2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>