<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ends_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white_252"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gl_buttons"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.39"></LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gl_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/bX"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="X"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b10"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="10"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b9"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="9"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b8"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="8"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b7"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="7"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b6"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="6"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b5"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="5"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b4"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="4"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b3"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="3"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b2"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/points_button_selector"
            android:fontFamily="sans-serif-thin"
            android:soundEffectsEnabled="false"
            android:text="2"
            android:textColor="#535353"
            android:textSize="24sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/b1"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="5dp"
