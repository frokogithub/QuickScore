<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="Apperence"
        app:layout="@layout/settings_header"
        app:iconSpaceReserved="false">
        <ListPreference
            app:layout="@layout/settings_row"
            app:elevation="0dp"
            app:defaultValue="light"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="Theme"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

        <CheckBoxPreference
            app:layout="@layout/settings_row"
            app:defaultValue="true"
            app:key="colored_cells"
            app:title="Colored Scores"
            app:summaryOn="On"
            app:summaryOff="Off"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>



    <PreferenceCategory
        app:title="Timer"
        app:layout="@layout/settings_header"
        app:iconSpaceReserved="false">

        <com.example.quickscore.CustomDialogPreferenceCompat
            app:layout="@layout/settings_row"
            app:key="set_times"
            app:title="Set Times"
            app:iconSpaceReserved="false"
            />

        <CheckBoxPreference
            app:layout="@layout/settings_row"
            app:defaultValue="true"
            app:key="timerSounds"
            app:title="Whistle"
            app:summaryOn="On"
            app:summaryOff="Off"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Save/Load"
        app:layout="@layout/settings_header"
        app:iconSpaceReserved="false">
        <ListPreference
            app:layout="@layout/settings_row"
            app:elevation="0dp"
            app:defaultValue="Ask before save"
            app:entries="@array/closeAction_entries"
            app:entryValues="@array/closeAction_values"
            app:key="closeAction"
            app:title="Close Action"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="Defaults"
        app:layout="@layout/settings_header"
        app:iconSpaceReserved="false">
        <ListPreference
            app:title="Default Event Type"
            app:key="default_event_type"
            app:layout="@layout/settings_row"
            app:elevation="0dp"
            app:entries="@array/default_event_type_entries"
            app:entryValues="@array/default_event_type_values"
            app:defaultValue="outdoor"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:title="Default division"
            app:key="default_division"
            app:layout="@layout/settings_row"
            app:elevation="0dp"
            app:entries="@array/default_division_entries"
            app:entryValues="@array/default_division_values"
            app:defaultValue="recurve"
            app:iconSpaceReserved="false"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>




</androidx.preference.PreferenceScreen>
